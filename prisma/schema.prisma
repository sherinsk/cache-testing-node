generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Define the enum for data values
enum Status {
  ACTIVE
  INACTIVE
  PENDING
}

model Record {
  id         Int      @id @default(autoincrement())
  name       String
  data       Status   @default(ACTIVE)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
